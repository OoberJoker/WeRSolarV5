<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.swara.wersolarv5.RegistrationActivity"
    tools:showIn="@layout/activity_registration"

    android:weightSum="1"
    android:background="@drawable/loginbg">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/registrationFormHeaderTextFieldID"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textAlignment="center"
        android:editable="true"
        android:fontFamily="Roboto"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView5"
        android:background="@drawable/sun2"
        android:layout_below="@+id/registrationFormHeaderTextFieldID"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/registrationFormUserNameFieldID"
        android:background="#ffffff"
        android:hint="User Name"
        android:textAlignment="center"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/registrationFormFirstNameFieldID"
        android:background="#ffffff"
        android:hint="First Name"
        android:textAlignment="center"
        android:layout_below="@+id/registrationFormUserNameFieldID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/registrationFormLastNameFieldID"
        android:background="#ffffff"
        android:hint="Last Name"
        android:textAlignment="center"
        android:layout_below="@+id/registrationFormFirstNameFieldID"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/registrationFormEmailFieldID"
        android:background="#ffffff"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_below="@+id/registrationFormLastNameFieldID"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/registrationFormPhoneNumberFieldID"
        android:background="#ffffff"
        android:hint="Phone Number"
        android:textAlignment="center"
        android:layout_below="@+id/registrationFormEmailFieldID"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/registrationFormPasswordFieldID"
        android:background="#ffffff"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_below="@+id/registrationFormPhoneNumberFieldID"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:singleLine="true"
        />

    <ImageView
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:id="@+id/registrationFormSignUpButtonID"
        android:background="@drawable/signup"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:layout_below="@+id/registrationFormPasswordFieldID"
        android:layout_centerHorizontal="true"


        />

</RelativeLayout>
</ScrollView>