<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="#fcfbfb"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="John Doe"
            android:id="@+id/historyPageFullNameIDField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/historyPageDateIDField"
            android:textSize="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Address"
            android:id="@+id/historyPageAddressIDField"
            android:layout_below="@+id/historyPageFullNameIDField"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Time"
            android:id="@+id/historyPageTimeIDField"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/historyPageDateIDField"
            android:layout_alignStart="@+id/historyPageDateIDField" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/historyPageDateIDField"
            android:layout_below="@+id/historyPageTimeIDField"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="45dp"
            android:layout_marginEnd="45dp" />
    </RelativeLayout>
